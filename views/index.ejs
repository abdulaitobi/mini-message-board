<html>

<head>
    <title>Mini Message Board</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h1>Mini Message Board</h1>
        </div>
    </nav>
    <ul>
        <% messages.forEach((msg, index)=> { %>
            <div class="card message" style="width: 18rem; margin-bottom: 10px;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= msg.user %>:
                    </h5>
                    <p class="card-text">
                        <%= msg.text %>
                    </p>

                    <p class="card-text">
                        <%= msg.added.toLocaleString() %>
                    </p>
                    <a href="/info/<%= index %>" class="btn btn-primary">View Details</a>
                </div>
            </div>
            <% }) %>
    </ul>
    <a class="btn btn-primary" href="/new" role="button">Add new message!</a>
</body>

</html>